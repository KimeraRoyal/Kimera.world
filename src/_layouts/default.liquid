<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head", metadata: site.metadata, title: data.title %}
  </head>
  <body class="{{ data.layout }} {{ data.page_class }}">
    {% render "navbar", metadata: site.metadata, resource: resource %}

    <main class="content-box">
      {% if data.icon %}
        {% assign icon = data.icon %}
      {% elsif layout.data.icon %}
        {% assign icon = layout.data.icon %}
      {% else %}
        {% assign icon = nil %}
      {% endif %}
      {% render "titlebar", label: data.title, icon: icon %}

      <div class="content">
        {{ content }}
      </div> <!-- content -->
    </main> <!-- content-box -->

    {% render "footer", metadata: site.metadata %}
  </body>
</html>
